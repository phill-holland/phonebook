@page
@model IndexModel
@{
    ViewData["Title"] = "Phone Book";
}

<div class="main">

    <div class="inner">
        <table style="width:100%;" cellpadding="0" cellspacing="0">
            <tr>
                <td width="80%">
                    <input type="text" id="terms" name="terms" tabindex="0" autocomplete="off" />
                    <img id="cancel" width="30" height="30" style="padding-left:10px;cursor:pointer;" onclick="ClearTerms();" src="~/images/icons/cancel.svg" />
                    <img id="loading" style="display:none;padding-left:15px;" width="50" src="~/images/icons/loading.gif" />
                </td>
                <td width="20%" style="text-align:right;">
                    
                </td>
            </tr>
        </table>
    </div>

    <hr />

    <div style="width:100%;">
        <label class="name_label" onclick="FlipSort();">
            Name
        </label>

        <label class="phone_label">
            Phone Number(s)
        </label>
    </div>

    <div id="results" class="results">

    </div>

</div>

@section scripts{
    <script type="text/javascript">
                $(function () {

                    var update_timer = setInterval(GetData, 60000 * 10);
                    var input_timer = setInterval(InputTimer, 1000);

                    OnLoad();
                });
    </script>
}